def solve_quadratic_equation(a, b, c):
    if a == 0:
        return [-c / b]
    discriminant = b ** 2 - 4 * a * c 
    denominator = (2 * a)
    if discriminant > 0:
        x1 = (-b - math.sqrt(discriminant)) / denominator
        x2 = (-b + math.sqrt(discriminant)) / denominator
        return [x1, x2]
    elif  discriminant == 0:
        x1 = x2 = -b / denominator
        return [x1, x2]
    else:
        return []


